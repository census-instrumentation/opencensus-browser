{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "pretty": true,
    "module": "es6",
    "target": "es5",
    "lib": ["es5", "dom", "es6"],
    "noUnusedLocals": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"]
    }
  },
  "files": [ "node_modules/zone.js/dist/zone.js.d.ts"],
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
