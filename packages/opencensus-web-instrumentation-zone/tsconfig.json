{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "pretty": true,
    "module": "es6",
    "target": "es5",
    "lib": ["es5", "dom", "es6"],
    "noUnusedLocals": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
